<% layout('layouts/boilerplate') -%>

<h2> Add a new post</h2>
<form class="newcontainer" action="/" method="POST">
    <input type="text" name="post[image]" id="image" required>
    <label for="image">Image URL</label>
    
    <input type="text" name="post[title]" id="title" required>
    <label for="title">Title</label>
    
    <input type="text" name="post[caption]" id="caption" required>
    <label for="caption">Caption</label>
    
    <button type="submit">Create post</button>
</form>

<a class="text" href="/">Back to all posts</a>
