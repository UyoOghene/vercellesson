<% layout('layouts/boilerplate') -%>

    <div class="home-container">
        
        <% if (posts.length > 0) { %>
            <% for(let post of posts) { %>
                <div class="post-container">
                    <h3><%= post.title %></h3>
                    <img src="<%= post.image %>" alt="Post Image" class="post-image">
                    <p><%= post.caption %></p>
                </div>
            <% } %>
        <% } else { %>
            <div class="post-container">
                <p>No posts found.</p>
            </div>
        <% } %>
    </div>